<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/grey"
        app:strokeWidth="0.8dp">

        <ImageView
            android:id="@+id/image_product_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banana" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/name_product_basket"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/name_product_basket"
        android:fontFamily="@font/rubik_medium"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/materialCardView3"
        app:layout_constraintTop_toTopOf="@+id/materialCardView3" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:strokeColor="@color/grey"
        app:strokeWidth="0.8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView3"
        app:layout_constraintStart_toEndOf="@+id/materialCardView3">

        <TextView
            android:id="@+id/counter_product_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="3dp"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/count_product"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/price_product_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/price_stock"
        android:fontFamily="@font/rubik_medium"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/basket_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_basket_line" />
</androidx.constraintlayout.widget.ConstraintLayout>